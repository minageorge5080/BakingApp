<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cakeListCardView"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_cake"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:scaleType="center"
            android:layout_gravity="center"
            android:src="@drawable/ic_cake" />

        <TextView
            android:id="@+id/tv_cakeName"
            style="@style/homeListCakeText"
            android:text="@string/cake_name" />

        <TextView
            android:id="@+id/tv_cake_serving"
            style="@style/homeListCakeTextServing"
            android:text="@string/cake_servings" />

    </LinearLayout>

</android.support.v7.widget.CardView>
